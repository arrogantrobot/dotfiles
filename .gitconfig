[color]
        ui = auto
[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green
[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red bold
        new = green bold
[color "status"]
        added = yellow
        changed = green
        untracked = cyan


[alias]
	st = status
	b = branch
	lg = log --graph --decorate --pretty=oneline --abbrev-commit
        d = diff
        co = checkout
        up = pull --rebase origin
	graph = log --pretty=format:i\"%h %s\" --graph
	sup = !git stash && git up && git pop

[merge]
	tool = vimdiff
[log]
	decorate = full
        
